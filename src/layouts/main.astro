    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <title>{title}</title>
        <!-- Add inside <head> -->
        <script src="https://tweakcn.com/live-preview.min.js"></script>
    </head>
    <body>
        <slot />
    </body>
</html>
